@model List<Contact>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<h3>İletişim Sayfası</h3>

<br />

<table class="table table-bordered table-hover" >
    <tr>
        <th>#</th>
        <th>Açık Adres</th>
        <th>Email</th>
        <th>Phone</th>
        <th>MapUrl</th>
        
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.Address</td>
            <td>@item.Email</td>
            <td>@item.Phone</td>
            <td>@item.MapUrl</td>
            <td>
                <button class="btn btn-outline-danger" onclick="DeleteContact(@item.ContactId)">Sil</button>
                <a class="btn btn-outline-info" asp-action="UpdateContact" asp-route-id="@item.ContactId">Güncelle</a>
            </td>
        </tr>


    }


</table>

<a class="btn btn-outline-primary" asp-action="CreateContact">Yeni İletişim Alanı Ekle</a>
<script>



 function DeleteContact(id) {

        Swal.fire({
            title: "Silmek istediğinize emin misiniz?",
            text: "Bu işlemi geri alamazsınız!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Evet, Sil!",
            cancelButtonText: "İptal"
        }).then((result) => {
            if (result.isConfirmed) {

                window.location.href = "/AdminContact/DeleteContact/" + id;

            }
        });

    }

</script>

