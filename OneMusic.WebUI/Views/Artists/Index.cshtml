@model List<AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<h3>Sanatçılar</h3>


<table class="table table-bordered table-hover" >

    <tr>
        <th>#</th>
        <th>Sanatçı Adı</th>
        <th>İşlemler</th>
    </tr>


    @foreach (var item in Model)
    {
        <tr>
            <th>@count</th>
            <td>@item.Name @item.SurName</td>
            <td>
                <a href="/Artist/DeleteArtist/@item.Id" class="btn btn-danger">Sil</a>
                <a href="/Artist/UpdateArtist/@item.Id" class="btn btn-outline-primary">Güncelle</a>
                <a href="#" class="btn btn-outline-info">Albümleri Gör</a>
            </td>
        </tr>

        
    }









</table>

